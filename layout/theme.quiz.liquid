{% comment %}<script src="{{ 'global.js' | asset_url }}" defer="defer"></script>{% endcomment %}

<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
{{content_for_header}}
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="theme-color" content="#003537">
	<link rel="canonical" href="{{ canonical_url }}">
	<link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
	<title>{{ page_title }}</title>
	{%- if settings.favicon != blank -%}
	<link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
	{%- endif -%}
	<meta name="facebook-domain-verification" content="ypi9o4g8mgjd852g0c0lsr9knaf7mx" />
	<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-W3Q8LJ5');</script>
	
	{% render 'meta-tags' %}
	<script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
	<script 
		src="//code.jquery.com/jquery-3.6.0.min.js"
		integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
		crossorigin="anonymous"
        defer="defer"></script>
	{{ 'theme.min.css' | append: '?v=1.5' | asset_url | stylesheet_tag }}
	<script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
	<script src="{{ 'site.min.js' | asset_url }}" defer="defer"></script>
	{{ 'bsub.js' | asset_url | script_tag }}
	{{ 'bsub.scss.css' | asset_url | stylesheet_tag }}
	
	{% render 'wsg-custom' %}
	{{ 'tiny-slider.css' | append: '?v=1.2' | asset_url | stylesheet_tag }}
    <script src="{{ 'tiny-slider.js' | asset_url }}" defer="defer"></script>


</head>


{% assign layouts = "index,landing" | split: ',' %}

{%- capture pageLayout -%}
{%- if layouts contains template.name or layouts contains template.suffix -%}
{%- else -%}
page-inner
{%- endif -%}
{%- endcapture -%}

<body class="{{ pageLayout }}{% if template.name == 'product' %} bg--tan{% endif %}">
	
	<noscript>
		<iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W3Q8LJ5" height="0" width="0" style="display:none;visibility:hidden"></iframe>
	</noscript>



	<main class="sitecontent" role="main" tabindex="-1" id="MainContent">
		{{ content_for_layout }}
	</main>



	<script src="{{ 'component-slider.min.js' | asset_url }}" defer="defer"></script>

	{% comment %} <!-- CRITEO START --> {% endcomment %}
	{% render 'criteo-tracking' %}
	{% comment %} <!-- CRITEO END --> {% endcomment %}



</body>

</html>