	var AddShoppersWidgetOptions = { 'loadCss': false, 'pushResponse': false };
	(!function(){
		var t=document.createElement("script");
		t.type="text/javascript",
		t.async=!0,
		t.id="AddShoppers",
		t.src="https://shop.pe/widget/widget_async.js#625053b727f7c370c573a927",
		document.getElementsByTagName("head")[0].appendChild(t)
	}());
	</script>
	{% render 'wsg-custom' %}
	{% render 'analyzify-product-datalayer.liquid' %}
	{{ 'tiny-slider.css' | append: '?v=1.2' | asset_url | stylesheet_tag }}
    <script src="{{ 'tiny-slider.js' | asset_url }}" defer="defer"></script>


</head>


{% assign layouts = "index,landing" | split: ',' %}

{%- capture pageLayout -%}
{%- if layouts contains template.name or layouts contains template.suffix -%}
{%- else -%}
page-inner
{%- endif -%}
{%- endcapture -%}

<body 
	class=" {{ pageLayout }}{% if template.name == 'product' %} bg--tan{% endif %}"
	data-ribbon="a"
>
	
	<noscript>
		<iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W3Q8LJ5" height="0" width="0" style="display:none;visibility:hidden"></iframe>
	</noscript>

	{%- render 'skip-content' -%}

	<div class="siteheader">
		{%- section 'announcement' -%}
		{%- section 'header' -%}
	</div>

	<main class="sitecontent" role="main" tabindex="-1" id="MainContent">
		{{ content_for_layout }}
	</main>

	{% section 'footer' %}

	<script>
		window.routes = {
			cart_add_url: '{{ routes.cart_add_url }}',
			cart_change_url: '{{ routes.cart_change_url }}',
			cart_update_url: '{{ routes.cart_update_url }}'
		};
		window.cartStrings = {
			error: "{{ 'sections.cart.cart_error' | t }}",
			quantityError: "{{ 'sections.cart.cart_quantity_error_html' | t }}"
		}
		window.variantStrings = {
			addToCart: "{{ 'products.product.add_to_cart' | t }}",
			soldOut: "{{ 'products.product.sold_out' | t }}",
			unavailable: "{{ 'products.product.unavailable' | t }}"
		}
	</script>

	<script src="{{ 'component-slider.min.js' | asset_url }}" defer="defer"></script>
	<script async type="text/javascript" src="https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=Xf5uH7"></script>

	{% render 'subscribe-it-helper' %}
	{% comment %} <!-- CRITEO START --> {% endcomment %}
	{% render 'criteo-tracking' %}
	{% comment %} <!-- CRITEO END --> {% endcomment %}
	{% render 'preorder-now' %}

  <script src="https://a.klaviyo.com/media/js/onsite/onsite.js"></script>
  <script>    
    var klaviyo = klaviyo || [];    
    klaviyo.init(
      {      
        account: "Xf5uH7",      
        platform: "shopify"    
      });    
    klaviyo.enable("backinstock",
                   {     
                     trigger: 
                       {      
                         product_page_text: "Notify Me When Available",      
                         product_page_class: "btn",      
                         product_page_text_align: "center",      
                         product_page_margin: "0px",      
                         replace_anchor: false    
                       },    
                     modal: {     
                       headline: "{product_name}",     
                       body_content: "Register to receive a notification when this item comes back in stock.",     
                       email_field_label: "Email",     
                       button_label: "Notify me when available",     
                       subscription_success_label: "You're in! We'll let you know when it's back.",     
                       footer_content: '',         
                       drop_background_color: "#f7efdd",     
                       background_color: "#f7efdd",     
                       text_color: "#003638",     
                       button_text_color: "#f7efdd",     
                       button_background_color: "#003638",     
                       close_button_color: "#ccc",     
                       error_background_color: "#fcd6d7",     
                       error_text_color: "#C72E2F",     
                       success_background_color: "#003638",     
                       success_text_color: "#f7efdd"    
                     }  
                   }
                  );
  </script>

 {% include 'smile-initializer' %}

</body>

</html>