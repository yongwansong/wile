	<script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
	<script src="{{ 'site.min.js' | asset_url }}" defer="defer"></script>
	{%- render 'bold-subscription-widget' -%}
	{{ 'bsub.js' | asset_url | script_tag }}
	{{ 'bsub.scss.css' | asset_url | stylesheet_tag }}
	{{ 'custom-main.min.css' | asset_url | stylesheet_tag: preload: true }}
	{%  comment %}{% render 'taboola_base' %}{% endcomment %}
	{% comment %}{% render 'quantcast_base' %}{% endcomment %}
